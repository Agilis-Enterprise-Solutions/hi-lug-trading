<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- Sale Confirm Levels Sale Order Form Inherit -->
    <record id="sale_order_inherit_form" model="ir.ui.view">
      <field name="name">sale.order.inherit.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale_confirm_levels.sale_confirm_levels_sale_order_form_inherit"/>
      <field name="arch" type="xml">
        <button name="action_quotation_send" type="object" states="confirm,sent,sale"
          position="attributes">
          <attribute name="states">verify,confirm,sent,sale</attribute>
        </button>
        <button name="print_quotation" type="object" states="confirm,sent,sale" class="o_sale_print"
          position="attributes">
          <attribute name="states">verify,confirm,sent,sale</attribute>
        </button>
        <button name="action_quotation_send" type="object" groups="sale.group_proforma_sales"
          attrs="{'invisible': ['|', ('state', '!=', 'confirm'), ('invoice_count','&gt;=',1)]}"
          context="{'proforma': True}" position="attributes">
          <attribute name="attrs">{'invisible': ['|', ('invoice_count','&gt;=',1), ('state', '!=', 'confirm'),('state', '!=', 'verify')]}</attribute>
        </button>
      </field>
    </record>

  </data>
</odoo>
